<h1>Books</h1>
<table class = "clearfix">
	<tr>
		<th class = "title">title</th>
   		<th class = "body">body</th>
   		<th class = "null"></th>
   	</tr>
   	<% @books.each do |book| %>
	<tr class = "index-box clearfix">
		<td class = "index-title"><%= book.title %></td>
	 	<td class = "index-body"><%= book.body %></td>
	    <td class = "index-show">
	      <%= link_to "Show", book_path(book.id) %>
	    </td>
	    <td class = "index-edit">
		  <%= link_to "Edit", edit_book_path(book.id) %>
		</td>
		<td class = "index-destroy">
		  <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
 	    </td>
   	    </tr>
	<% end %>
</table>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
       <li>error</li>
    </ul>
  </div>
<% end %>
<div class = "new-box">
	<h1 class =new-big-title>New book</h1>
	<%= form_for(@book) do |f| %>
	<div class ="new-title">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class = "new-body">
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>
	<div class = "update-box">
		<%= f.submit "Create Book" %>
 	</div>
<% end %>
</div>
