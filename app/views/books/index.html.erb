<h1>Books</h1>
<h4>title</h4>
<h4>body</h4>
	<% @books.each do |book| %>
	<div class = "clearfix">
		<div class = "index-title-box">
			<div class = "index-title"></div>
				<p><%= book.title %></p>
		</div>
		<div class = "index-body-box">
			<div class = "index-body">
			</div>
				<p><%= book.body %></p>
		</div>
		<div class = "index-show">
			<%= link_to "Show", book_path(book.id) %>
		</div>
		<div class = "index-edit">
			<%= link_to "Edit", edit_book_path(book.id) %>
		</div>
		<div class = "index-destroy">
		<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
   	 </div>
</div>
<% end %>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class = "new-box">
	<h1 class =new-big-title>New book</h1>
	<%= form_for(@book) do |f| %>
	<div class ="new-title">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class = "new-body">
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>
	<div class = "update-box">
		<%= f.submit "Create Book" %>
 	</div>
<% end %>
</div>
