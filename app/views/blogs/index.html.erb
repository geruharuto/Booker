<h1>Books</h1>
<% @books.each do |book| %>

<h4>title</h4>
<p><%= book.title %></p>

<h4>body</h4>
<p><%= book.body %></p>

<%= link_to "Show", blog_path(@book.id) %>
<%= link_to "Edit", edit_blogs_path(@book.id) %>
<%= link_to "Destroy", destroy_blogs_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit link_to "Create Book" %>

<% end %>
